{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": [
			"es2020",
			"ESNext.WeakRef"
		],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"**/*.bgl.ts"
	]
}